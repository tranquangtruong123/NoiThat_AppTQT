<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/co"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <com.google.android.material.bottomappbar.BottomAppBar
          android:backgroundTint="@color/trangxam"
            android:layout_gravity="bottom"
            android:id="@+id/bottomapp"
            app:fabCradleMargin="10dp"
            app:fabCradleRoundedCornerRadius="40dp"
            app:fabCradleVerticalOffset="2dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <LinearLayout
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="3dp"
                        android:id="@+id/navi_home"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_home"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"/>
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:text="Trang Chủ"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="3dp"
                        android:id="@+id/navi_dondat"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_dobdat"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"/>
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:text="Sản Phẩm"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/navi_sale"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_local_offer_24"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"/>
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:text="Ưu Đãi"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/navi_profile"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_person_pin_24"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"/>
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:text="Thêm"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.bottomappbar.BottomAppBar>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating"
            app:layout_anchor="@id/bottomapp"
            android:backgroundTint="#FF5e00"
            android:src="@drawable/shopping_cart"
            android:elevation="5dp"
            app:elevation="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>