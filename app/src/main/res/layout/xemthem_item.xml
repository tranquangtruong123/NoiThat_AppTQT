<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="20dp"
    android:layout_height="wrap_content">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="165dp"
          android:layout_height="300dp">
              <ImageView
                  android:id="@+id/xemthem_img"
                  android:src="@drawable/phongks1"
                  android:scaleType="centerCrop"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"/>
               <LinearLayout
                   android:id="@+id/layout99"
                   android:layout_marginTop="20dp"
                   app:layout_constraintTop_toTopOf="parent"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:gravity="center_horizontal"
                   >
                   <TextView
                       android:textSize="20dp"
                       android:textColor="@color/dochu"
                       android:textStyle="bold"
                       android:text="Giá : "
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:id="@+id/xemthem_txt"
                       android:text="2000NVND"
                       android:textSize="16dp"
                       android:textColor="@color/dochu"
                       android:textStyle="bold"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </LinearLayout>

              <TextView
                  android:id="@+id/xemthem_txt2"
                  android:text="Dành Cho 2 Người "
                  android:layout_marginTop="-5dp"
                  app:layout_constraintTop_toBottomOf="@id/layout99"
                  app:layout_constraintLeft_toLeftOf="@id/xemthem_img"
                  android:textSize="18dp"
                  android:textColor="@color/dochu"
                  android:textStyle="normal|italic"
                  app:layout_constraintRight_toRightOf="@id/xemthem_img"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
              <androidx.appcompat.widget.AppCompatButton
                  android:layout_marginTop="10dp"
                  android:id="@+id/xemthem_bnt"
                  android:text="Đặt Phòng"
                  style="@style/Theme.AppCompat"
                  android:textColor="@color/white"
                  android:background="@drawable/background_bntcomau"
                  app:layout_constraintTop_toBottomOf="@id/xemthem_txt2"
                  app:layout_constraintLeft_toLeftOf="@id/xemthem_img"
                  app:layout_constraintRight_toRightOf="@id/xemthem_img"
                  android:layout_width="100dp"
                  android:layout_height="30dp"/>

      </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>