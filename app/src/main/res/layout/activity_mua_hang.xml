<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.activities.MuaHang"
    android:background="@color/trangxam"
    android:layout_margin="16dp">
    <ImageView
        android:id="@+id/viewanimation"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <ImageView
        android:id="@+id/muahang_back"
        android:src="@drawable/ic_km_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <TextView
               android:id="@+id/mh_tensp"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:text="Name Table"
               android:textSize="30dp"
               android:textColor="@color/xanh"
               android:fontFamily="@font/orbitron_medium"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/mh_gia"
               android:text="20$"
               android:textSize="23dp"
               android:textColor="@color/chu"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toBottomOf="@id/mh_tensp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/sp_anh"
               android:src="@drawable/anhdulich2"
               app:layout_constraintTop_toBottomOf="@id/mh_gia"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_marginTop="10dp"
               android:layout_width="270dp"
               android:layout_height="270dp"/>
           <LinearLayout
               android:id="@+id/layout"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toBottomOf="@id/sp_anh"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_width="160dp"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="3">
               <ImageView
                   android:id="@+id/sp_minus"

                   android:layout_weight="1"
                   android:src="@drawable/minus"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:text="1"
                   android:textColor="@color/chu"
                   android:textStyle="bold"
                   android:fontFamily="@font/muli"
                   android:id="@+id/mh_demso"
                   android:layout_weight="1"
                   android:textSize="23dp"
                   android:gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"/>
               <ImageView
                   android:id="@+id/sp_plus"
                   android:layout_weight="1"
                   android:src="@drawable/plus"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
           <TextView
               android:id="@+id/mh_ht"
               android:padding="20dp"
               android:layout_marginTop="10dp"
               android:text="dong nay la hoi sai"
               android:textSize="20dp"
               app:layout_constraintTop_toBottomOf="@+id/layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
       </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:weightSum="10"
        android:id="@+id/sp_bnt"
        android:background="@drawable/background_bntcomau">
        <ImageView
            android:src="@drawable/ic_carttt"
            android:id="@+id/bnt_mua"
            android:background="@android:color/transparent"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:text="Mua HÃ ng"
            android:layout_weight="7"
            android:textSize="20dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>