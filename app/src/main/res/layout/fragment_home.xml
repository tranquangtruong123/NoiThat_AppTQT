<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E3D1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.activities.fragment.HomeFragment">


       <androidx.core.widget.NestedScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">
               <ImageView
                   android:layout_marginTop="4dp"
                   android:src="@drawable/agoda"
                   android:layout_marginStart="-50dp"
                   android:layout_width="250dp"
                   android:layout_height="80dp"/>
               <androidx.viewpager2.widget.ViewPager2
                   android:id="@+id/viewpager"
                   android:layout_marginTop="-10dp"
                   android:layout_gravity="center"
                   android:background="@drawable/slide_background"
                   android:layout_width="300dp"
                   android:layout_height="200dp"/>
               <me.relex.circleindicator.CircleIndicator3
                   android:id="@+id/circle"
                   app:ci_drawable="@drawable/background_circle"
                   android:layout_marginTop="8dp"
                   android:layout_gravity="center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="25dp"/>
            <TextView
                android:text="@string/khuyenmai"
                android:textColor="@color/hong"
                android:textSize="22dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/muli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginEnd="10dp"
                android:id="@+id/recy1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/hong"
                android:textSize="22dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/muli"
                android:text="@string/thanhtich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <androidx.appcompat.widget.AppCompatButton
                   android:background="@drawable/background_button"
                    android:drawableStart="@drawable/ic_star"
                    android:text="90 Điểm"
                    android:textSize="14dp"
                    android:paddingStart="25dp"
                    android:textColor="@color/xanh"
                    style="@style/Theme.AppCompat"
                    android:paddingEnd="25dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/background_button"
                    android:drawableStart="@drawable/ic_homeadd"
                    android:text="4 Sản Phẩm"
                    android:textSize="14dp"
                    android:paddingStart="25dp"
                    android:textColor="@color/xanh"
                    style="@style/Theme.AppCompat"
                    android:paddingEnd="25dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <View
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/chu"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:textColor="@color/hong"
                android:textSize="22dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/muli"
                android:text="@string/khampha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/recy2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="200dp"/>
        </LinearLayout>
       </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>