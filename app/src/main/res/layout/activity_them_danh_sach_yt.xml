<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trangxam"
    tools:context=".Activities.activities.HienThiAcTy.Them_Danh_Sach_YT">

    <TextView
        android:id="@+id/txtxt"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/xanh"
        android:text="@string/dsyt"
        android:textColor="@color/trangxam"
        android:textSize="26dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>
    <ImageView
        android:id="@+id/ytimg_back"
        android:src="@drawable/ic_back"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@id/txtxt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/yt_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtxt"
        tools:layout_editor_absoluteX="44dp" />
</androidx.constraintlayout.widget.ConstraintLayout>