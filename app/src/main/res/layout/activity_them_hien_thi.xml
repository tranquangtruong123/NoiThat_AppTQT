<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.activities.HienThiAcTy.Them_Hien_Thi"
    android:background="@color/trangxam"
    >
    <include layout="@layout/item_them_header"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/them_txt"
            android:fontFamily="@font/muli"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/xanh"
            android:text="@string/thongtincanhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/them_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/them_txt_gt"
            android:fontFamily="@font/muli"
            android:textSize="20dp"
            android:textColor="@color/xanh"
            android:text="@string/gioitinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginStart="55dp"
            app:layout_constraintTop_toBottomOf="@id/them_txt"
            app:layout_constraintStart_toEndOf="@id/them_txt_gt"
            android:id="@+id/them_chon_gt"
            android:fontFamily="@font/muli"
            android:textColor="@color/xanh"
            android:textSize="20dp"
            android:text="Nam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/view1"
            android:layout_marginTop="10dp"
            android:background="#938484"
            app:layout_constraintTop_toBottomOf="@id/them_txt_gt"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/them_txt_ngaysinh"
            android:fontFamily="@font/muli"
            android:textSize="20dp"
            android:textColor="@color/xanh"
            android:text="@string/ngaysinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginStart="55dp"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintStart_toEndOf="@id/them_txt_gt"
            android:id="@+id/them_chon_ngaysinh"
            android:fontFamily="@font/muli"
            android:textColor="@color/xanh"
            android:textSize="20dp"
            android:text="01/01/2002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/view2"
            android:layout_marginTop="10dp"
            android:background="#938484"
            app:layout_constraintTop_toBottomOf="@id/them_txt_ngaysinh"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/view2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/them_txt_sdt"
            android:fontFamily="@font/muli"
            android:textSize="20dp"
            android:textColor="@color/xanh"
            android:text="@string/sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginStart="55dp"
            app:layout_constraintTop_toBottomOf="@id/view2"
            app:layout_constraintStart_toEndOf="@id/them_txt_gt"
            android:id="@+id/them_chon_sdt"
            android:fontFamily="@font/muli"
            android:textColor="@color/xanh"
            android:textSize="20dp"
            android:text="0987654321"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/view3"
            android:layout_marginTop="10dp"
            android:background="#938484"
            app:layout_constraintTop_toBottomOf="@id/them_txt_sdt"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/view3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/them_txt_email"
            android:fontFamily="@font/muli"
            android:textSize="20dp"
            android:textColor="@color/xanh"
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginStart="55dp"
            app:layout_constraintTop_toBottomOf="@id/view3"
            app:layout_constraintStart_toEndOf="@id/them_txt_gt"
            android:id="@+id/them_chon_email"
            android:fontFamily="@font/muli"
            android:textColor="@color/xanh"
            android:textSize="20dp"
            android:text="truong@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bntchinhsua"
        style="@style/Theme.AppCompat"
        android:textSize="22dp"
        android:textColor="@color/xanh"
        android:text="@string/chinhsua"
        android:background="@drawable/background_button"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="55dp"/>

</LinearLayout>