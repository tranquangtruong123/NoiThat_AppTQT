<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.activities.HoaDon"
    android:background="@color/trangxam">
    <TextView
        android:id="@+id/chu"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Đơn Hàng Của Bạn"
        android:gravity="center"
        android:textSize="26dp"
        android:textColor="@color/cam"
        android:background="@color/xanh"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>
    <ImageView
        android:id="@+id/back_to"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/chu"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_back"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="8dp"
        android:id="@+id/hoadon_recy"
        app:layout_constraintTop_toBottomOf="@id/chu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>