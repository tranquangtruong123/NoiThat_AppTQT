<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="160dp"
    android:id="@+id/layout"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_cat1">
    <ImageView
        android:id="@+id/khuyenmai_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/phongks1"
        android:layout_width="120dp"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/khuyenmain_txt"
        android:text="Sale 20%"
        android:textSize="25dp"
        android:fontFamily="@font/baloo"
        android:textColor="#f00"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/khuyenmai_img"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/khuyenmai_txt2"
        android:text="Trong tháng 11\n  Cho Cặp Đôi"
        android:textColor="@color/hong"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/khuyenmain_txt"
        app:layout_constraintStart_toEndOf="@id/khuyenmai_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="10dp"
        android:id="@+id/khuyenmai_bnt"
        android:text="Săn Ngay"
        android:textColor="@color/white"
        style="@style/Theme.AppCompat"
        android:background="@drawable/background_bntcomau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/khuyenmai_txt2"
        app:layout_constraintStart_toEndOf="@id/khuyenmai_img"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>