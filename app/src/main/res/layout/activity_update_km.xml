<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trangxam"
    tools:context=".Activities.activities.Admin.QLyKM">
    <ImageView
        android:id="@+id/cnkm_back"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toLeftOf="@+id/cnkm_img"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="-30dp"
        android:src="@drawable/ic_km_back"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <ImageView
        android:id="@+id/cnkm_img"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/anhdulich2"
        android:layout_width="180dp"
        android:layout_height="180dp"/>
    <ImageView
        android:id="@+id/cnkm_camera"
        app:layout_constraintTop_toBottomOf="@+id/cnkm_img"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_camery"
        android:layout_marginStart="60dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <ImageView
        android:id="@+id/cnkm_fodel"
        app:layout_constraintTop_toBottomOf="@+id/cnkm_img"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_folder"
        android:layout_marginEnd="60dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <EditText
        android:id="@+id/edt_cnprice"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp"
        android:hint="Giá $"
        android:padding="10dp"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/cnkm_camera"
        android:background="@drawable/background_edittex"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>
    <EditText
        android:id="@+id/edt_cnmota"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp"
        android:hint="Mô Tả"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/edt_cnprice"
        android:background="@drawable/background_edittex"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>
    <EditText
        android:id="@+id/edt_cnuudai"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp"
        android:hint="Ưu Đãi"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/edt_cnmota"
        android:background="@drawable/background_edittex"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>
    <EditText
        android:id="@+id/edt_cnkichthuoc"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp"
        android:hint="Kích Thước"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/edt_cnuudai"
        android:background="@drawable/background_edittex"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>
    <EditText
        android:id="@+id/edt_cnchatlieu"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp"
        android:hint="Chất Liệu"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/edt_cnkichthuoc"
        android:background="@drawable/background_edittex"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/edt_cnchatlieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cnkm_bnt_save"
            android:text="Cập Nhật"
            android:background="@drawable/background_bntcomau"
            android:textColor="@color/trangxam"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cnkm_bnt_hienthi"
            android:background="@drawable/background_bntcomau"
            android:textColor="@color/trangxam"
            android:text="Hiển Thị"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>